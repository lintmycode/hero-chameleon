{
  "name": "hero-chameleon",
  "version": "0.0.3",
  "description": "Dynamically change css classes depending on image average color.",
  "type": "module",
  "main": "dist/hero-chameleon.cjs.js",
  "browser": "dist/hero-chameleon.js",
  "targets": {
    "browser": {
      "context": "browser",
      "outputFormat": "esmodule",
      "includeNodeModules": true
    }
  },
  "scripts": {
    "start": "parcel hero-chameleon.js",
    "build": "parcel build hero-chameleon.js",
    "parcel-clear": "rm -rf .parcel-cache dist",
    "demo": "parcel build hero-chameleon.js && cp dist/hero-chameleon.js docs/hero-chameleon.js"
  },
  "author": "lintmycode",
  "license": "ISC",
  "files": [
    "package.json",
    "hero-chameleon.js"
  ],
  "dependencies": {
    "colorthief": "^2.4.0"
  },
  "devDependencies": {
    "parcel": "^2.11.0"
  }
}
